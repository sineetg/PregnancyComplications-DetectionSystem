  </div>

  <div>
    <%= form.label :oxygen_saturation, style: "display: block" %>
    <%= form.text_field :oxygen_saturation %>
  </div>

  <div>
    <%= form.label :weight, style: "display: block" %>
    <%= form.text_field :weight %>
  </div>

  <div>
    <%= form.label :recorded_at, style: "display: block" %>
    <%= form.datetime_field :recorded_at %>
  </div>

